{
  "private": true,
  "name": "audiocalendar",
  "packageManager": "pnpm@9.15.0",
  "workspaces": [
    "app",
    "client",
    "packages/*",
    "supabase"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "stop": "pnpm -F @audiocalendar/supabase stop",
    "generate": "pnpm -F @audiocalendar/types generate",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "@turbo/gen": "^2.3.0",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "turbo": "^2.3.0",
    "husky": "^9.1.7"
  }
}
